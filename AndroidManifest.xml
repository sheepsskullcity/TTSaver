<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.txt.to.audiofile"
    android:versionCode="12"
    android:versionName="1.2.7" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true" >
        <activity
            android:name="org.txt.to.audiofile.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.txt.to.audiofile.SettingsActivity" >
        </activity>
        <activity
            android:name="org.txt.to.audiofile.FilesActivity" >
        </activity>
        <service android:name="org.txt.to.audiofile.TTSaverService" ></service>
    </application>

</manifest>
